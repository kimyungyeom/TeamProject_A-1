<%- include('../partials/header.ejs') %>
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <div class="container-fluid px-2 px-md-4">

      <div class="page-header min-height-300 border-radius-xl mt-4"
        style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
        <span class="mask  bg-gradient-primary  opacity-6"></span>
      </div>

      <!-- 유저 정보  -->
      <div class="card card-body mx-3 mx-md-4 mt-n6">
        <div class="row gx-4 ">
          <div class="col-auto">
            <div class="avatar avatar-xl position-relative">
              <img src="/assets/img/bruce-mars.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
            </div>
          </div>
          <div class="col-auto my-auto">

            <h5 class="mb-1">
              <%= user.name %>
            </h5>
          </div>
          <div class="col-lg-1 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
            <div class="nav-rapper position-relative end-0">
              <a class="btn btn-outline-primary mt-3 w-80" role="button" href="http://localhost:3000/adm/users">
                뒤로
              </a>

            </div>
          </div>
          <div class="row ">
            <!-- 유저 정보 왼쪽  -->
            <div class="col-12 col-xl-6">
              <div class="card card-plain h-50 ">
                <div class="card-body p-2">
                  <hr class="horizontal gray-light my-4">
                  <ul class="list-group">
                    <li class="list-group-item border-0 ps-0 pt-0 text-sm">
                      <strong class="text-dark">
                        email :
                      </strong>
                      &nbsp; <%= user.email %>
                    </li>
                    <li class="list-group-item border-0 ps-0 text-sm">
                      <strong class="text-dark">
                        Mobile:</strong>
                      &nbsp; <%= user.phone %>
                    </li>
                    <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">
                        가입일 :
                      </strong>
                      &nbsp; <%= user.created_at %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <!-- 유저 정보 오른쪽  -->
            <div class="col-12 col-xl-6">
              <div class="card card-plain h-100">
                <div class="card-header pb-0 p-3">
                  <h6 class="mb-0">최근 이용 내역</h6>
                </div>
                <div class="card-body p-3">
                  <ul class="list-group">

                    <% for (const history of recent) { %>

                      <li class="list-group-item border-0 d-flex align-items-center px-0 mb-2 pt-0">
                        <div class="avatar me-3">
                          <img src="/assets/img/kal-visuals-square.jpg" alt="kal" class="border-radius-lg shadow">
                        </div>
                        <div class="d-flex align-items-start flex-column justify-content-center">
                          <h6 class="mb-0 text-sm">
                            펫시터 이름 : <%= history.user.name %> / 예약번혼 : <%= history.reserve_id %>
                          </h6>
                          <p>
                            <%= history.store.title %>
                          </p>
                        </div>
                      </li>
                      </a>
                      <% } %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </main>

  <%- include('../partials/footer.ejs') %>